@model IEnumerable<SmallCRM.Admin.Models.DocumentViewModel>

@{
    ViewBag.Title = "Belgeler";
}

<h2>Belgeler</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Yeni Belge</a>
</p>
<table class="table" id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.File)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FileType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Extension)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>Eylemler</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.File)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FileType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Extension)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Size)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>

                <td>
                    @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, new {@class="btn btn-success btn-sm" }) 
                    @Html.ActionLink("Detaylar", "Details", new { id = item.Id }, new {@class="btn btn-default btn-sm" }) 
                    @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new {@class="btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>

</table>
