@model IEnumerable<SmallCRM.Admin.Models.RegionViewModel>

@{
    ViewBag.Title = "İlçeler";
}

<h2>İlçeler</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">İlçeler</a>
</p>
<table class="table" id="myTable">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CityName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CityName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>

            <td>
                @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, new { @class ="btn btn-success btn-sm"}) |
                @Html.ActionLink("Detaylar", "Details", new { id = item.Id }, new { @class ="btn btn-default btn-sm"}) |
                @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class ="btn btn-danger btn-sm"})
            </td>
        </tr>
    }

</table>
