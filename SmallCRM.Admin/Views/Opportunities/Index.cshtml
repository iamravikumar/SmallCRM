@model IEnumerable<SmallCRM.Admin.Models.OpportunityViewModel>

@{
    ViewBag.Title = "Satış Fırsatları";
}

<h2>Satış Fırsatları</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Yeni Satış Fırsatı</a>
</p>
<table class="table" id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CampaignSourceName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompanyOwner)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactOwner)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LeadSourceName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Owner)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.OpportunityType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NextStep)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CloseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OpportunityStage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Possibility)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpectedRevenue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>


            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>


            <th class="all">Eylemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CampaignSourceName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompanyOwner)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactOwner)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LeadSourceName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Owner)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OpportunityType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NextStep)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CloseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OpportunityStage)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Possibility)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExpectedRevenue)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>



                <td class="text-nowrap">
                    @Html.ActionLink("Düzenle", "Edit", new { id = item.Id },new {@class="btn btn-success btn-sm" }) 
                    @Html.ActionLink("Detaylar", "Details", new { id = item.Id },new {@class="btn btn-default btn-sm" }) 
                    @Html.ActionLink("Sil", "Delete", new { id = item.Id },new {@class="btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>
