@model IEnumerable<SmallCRM.Admin.Models.LeadSourceViewModel>

@{
    ViewBag.Title = "Müşteri Adayları Kaynağı";
}

<h2>Müşteri Adayları Kaynağı</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Müşteri Adayları Durumu</a>
</p>
<table class="table" id="myTable">  
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
      
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
      
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td>
      
        <td>
            @Html.ActionLink("Düzenle","Edit",new {id = item.Id}, new {@class = "btn btn-success btn-sm"})
            @Html.ActionLink("Detaylar","Details", new { id = item.Id }, new {@class = "btn btn-default btn-sm"})
            @Html.ActionLink("Sil","Delete", new { id = item.Id}, new { @class = "btn btn-danger btn-sm"})
        </td>
    </tr>
}

</table>
