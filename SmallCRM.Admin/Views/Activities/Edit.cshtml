@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
     function FirmaEkle() {
        var firmaAdi = $("#companyName").val();
        var firmaTelefon = $("#companyPhone").val();
        var firmaWebsitesi = $("#companyWebsite").val();

        $.post("@Url.Action("AddCompany")", { companyName: firmaAdi, companyPhone: firmaTelefon, companyWebsite: firmaWebsitesi }, function (data) {
            if (data == true) {
                alert("Firma başarıyla eklendi.");
                $("#exampleModal").modal("hide");

                $.post("@Url.Action("GetCompanies")", null, function (data) {
                    $("#CompanyId").empty();
                    $("#CompanyId").append('<option value="">Firma Seçiniz</option>');
                    $.each(data, function (index, value) {
                        $("#CompanyId").append('<option value="' + value.Id + '">' + value.Name + '</option>');
                    });

                });
                // TODO: modal'ı kapat
                // TODO: ana firma selectini yenile
            }
        });
          }
    function SatisFirsatiEkle() {
        var miktar = $("#opportunityAmount").val();
        var asama = $("#opportunityStage").val();
        var kapanisTarihi = $("#opportunityCloseDate").val();
        var firmaAdi = $("#companyId").val();
        var satisFirsatiAdi = $("#opportunityName").val();

        $.post("@Url.Action("AddOpportunity")", { opportunityAmount: miktar, opportunityStage: asama, opportunityCloseDate: kapanisTarihi, companyId: firmaAdi, opportunityName: satisFirsatiAdi }, function (data) {
            if (data == true) {
                alert("Satış Fırsatı başarıyla eklendi.");
                $("#exampleModal2").modal("hide");

                $.post("@Url.Action("GetOpportunities")", null, function (data) {
                    $("#OpportunityId").empty();
                    $("#OpportunityId").append('<option value="">Satış Fırsatı Seçiniz</option>');
                    $.each(data, function (index, value) {
                        $("#OpportunityId").append('<option value="' + value.Id + '">' + value.Name + '</option>');
                    });

                });
            }
        });
          }
    function KampanyaEkle() {
        var tip = $("#opportunityType").val();
        var kampanyaAdi = $("#campaignName").val();
        var durum = $("#campaignStatus").val();
        var baslangicTarihi = $("#startDate").val();
        var bitisTarihi = $("#endDate").val();
        var beklenenCiro = $("#expectedRevenue").val();

        $.post("@Url.Action("AddCampaign")", { opportunityType: tip, campaignName: kampanyaAdi, campaignStatus: durum, startDate: baslangicTarihi, endDate: bitisTarihi, expectedRevenue: beklenenCiro }, function (data) {
            if (data == true) {
                alert("Kampanya başarıyla eklendi.");
