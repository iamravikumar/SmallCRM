                $.post("@Url.Action("GetCampaigns")", null, function (data) {
                    $("#CampaignId").empty();
                    $("#CampaignId").append('<option value="">Kampanya Seçiniz</option>');
                    $.each(data, function (index, value) {
                        $("#CampaignId").append('<option value="' + value.Id + '">' + value.Name + '</option>');
                    });

                });
            }
        });
    }
    </script>
