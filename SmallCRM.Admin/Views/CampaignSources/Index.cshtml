@model IEnumerable<SmallCRM.Admin.Models.CampaignSourceViewModel>

@{
    ViewBag.Title = "Kampanya Kaynakları";
}

<h2>Kampanya Kaynakları</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Yeni Kampanya Kaynağı</a>
</p>
<table class="table"id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>

            <th class="all">Eylemler</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>

                <td nowrap>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-success btn-sm" }) 
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" }) 
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>
